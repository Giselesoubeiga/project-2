<!-- Container for title -->
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 data-aos="fade-up" data-aos-anchor-placement="top-center" data-aos-duration="3000" class="intro-h1">Welcome
          to the Archer Forum</h1>
        <p class="intro-p" data-aos="fade-down-left" data-aos-duration="3000">Feel free to create and comment on any
          post based on any season of the show. Do not hesitate to share
          and banter or opinion with archer lovers like yourself! <strong>Have Fun!!</strong>
        </p>
      </div>
    </div>
  </div>
  <br>
  <br>

  <!-- Container for posts -->

  <div class="container">
    <div class="row">

        <div class="col-lg-9">
            <div class="row">

                {{#each posts as |post|}}
                    <div class="col-md-6">
       

                        <!-- Card for post -->
                        <div class="card c-color" data-aos="fade-left" data-aos-duration="1000">
                        <img src="img/archerhomepage.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <small>{{post.createdAt}}</small>
                            <h3 class="card-title">{{post.title}}</h3>
                            <p class="card-text">{{post.body}}</p>
                            <!-- Link for single post goes below in <a> tag -->
                            <a href="#" class="btn btn-secondary">View post and comments</a>
                        </div>
                        </div>
                
                    </div>

                {{/each}}

            </div>

        </div>
        <div class="col-lg-3">

            <ul class="list-group">
                {{#each categories as |category|}}
                <li class="list-group-item"><a href="/category-post/1"> {{category.name}}</a></li>
                  {{/each}}
            </ul>

        </div>


  


    </div>
  </div>
  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="js/login.js"></script>
  <script src="https://unpkg.com/@popperjs/core@2"></script>
  <!-- Init AOS  -->
  <script>AOS.init()</script>